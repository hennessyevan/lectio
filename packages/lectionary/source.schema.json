{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://lectio.github.io/source.schema.json",
  "title": "Ordo Source Schema",
  "description": "All sources should adhere to this schema.",

  "type": "object",
  "required": ["year", "season", "days"],
  "properties": {
    "year": {
      "type": "string",
      "description": "The liturgical year.",
      "enum": ["A", "B", "C", "I", "II"]
    },
    "season": {
      "type": "string",
      "description": "The liturgical season.",
      "enum": ["ADVENT", "CHRISTMAS", "ORDINARY_TIME", "LENT", "EASTER"]
    },

    "days": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "Week",
          "Day",
          "First Reading",
          "Responsorial Psalm",
          "Gospel"
        ],
        "properties": {
          "Week": {
            "type": "number",
            "minimum": 1,
            "maximum": 34
          },
          "Day": {
            "type": "string",
            "enum": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday",
              "Sunday"
            ]
          },
          "First Reading": {
            "$ref": "#/$defs/usfmOrOsis"
          },
          "Responsorial Psalm": {
            "$ref": "#/$defs/usfmOrOsis"
          },
          "Second Reading": {
            "$ref": "#/$defs/usfmOrOsis"
          },
          "Gospel": {
            "$ref": "#/$defs/usfmOrOsis"
          }
        }
      }
    }
  },

  "$defs": {
    "usfm": {
      "type": "string",
      "pattern": "^[A-Z1-4]{3}(-[A-Z1-4]{3})? ?[a-z0-9\\-:]*$"
    },
    "osis": {
      "type": "string"
    },
    "usfmOrOsis": {
      "anyOf": [{ "$ref": "#/$defs/usfm" }, { "$ref": "#/$defs/osis" }]
    }
  }
}
